extends layout

block content

    div
        table.table
            thead
                tr
                  th Articulos
                  th Valorizado
                  th % Valorizado
                  th Modelo Actual
                  th Modelo Sugerido
            tbody
                each art, a in articulos
                    tr
                        td 
                           a(href='/articulos/#{art.id}') #{art.nombre}    
                        td $ #{art.valorizado}
                        td #{art.pValorizado}
                        td #{art.modelo}
                        td #{art.modeloSugerido}
